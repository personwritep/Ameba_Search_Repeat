    function get_userid(n){
        let this_url=location.href;
        let index_after=this_url.indexOf('.html?aid=');
        let caption=document.querySelector('.PcEntryList_Caption');

        if(index_after==-1){ // ãƒ–ãƒ­ã‚°å†…æ¤œç´¢ã‹ã‚‰å‡ºãŸæ™‚ ä½•ã‚‚ã—ãªã„
